<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_rx_reg_field1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/username_field"/>

    <EditText
        android:id="@+id/et_rx_reg_field2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_rx_reg_field1"
        android:hint="@string/email_field"/>

    <Button
        android:id="@+id/btn_reg_rx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_rx_reg_field2"
        android:layout_alignParentRight="true"
        android:enabled="false"
        android:text="@string/button_reg_rx"/>

</RelativeLayout>
